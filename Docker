FROM python:3.8-slim

# Set working directory
WORKDIR /app

# Copy project files
COPY ./receiver.py /app/

# Install dependencies
RUN pip install fastapi uvicorn python-dotenv

# Expose port dynamically
EXPOSE 8000

# Start FastAPI service
CMD ["uvicorn", "attack_receiver:app", "--host", "0.0.0.0", "--port", "8000"]
